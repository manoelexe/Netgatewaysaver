<Window x:Class="Netgatewaysaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Netgatewaysaver"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
            <ListBox ItemsSource="{Binding}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding OperationalStatus}" />
                            <TextBlock Text="{Binding Description}" />
                            <TextBlock Text="{Binding Speed}" />
                            <TextBlock Text="{Binding MAC}" />
                            <TextBlock Text="{Binding IsReceiveOnly}" />
                            <TextBlock Text="{Binding Channel}" />
                            <TextBlock Text="-------------------------------------------------" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    
</Window>
